{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Domestic Tourist Arrivals Malaysian States 2023",
  "width": 600,
  "height": 400,
  "projection": { "type": "equalEarth" },
  "data": {
    "url": "https://raw.githubusercontent.com/jtan0284/3179/refs/heads/main/Data%20Source/MalaysiaStatetopojson.json",
    "format": {
      "type": "topojson",
      "feature": "mys_admbnda_adm1_unhcr_20210211"
    }
  },
  "transform": [
    {
      "lookup": "properties.ADM1_EN",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jtan0284/3179/refs/heads/main/Data%20Source/DomesticTourismArrival.csv"
        },
        "key": "State",
        "fields": ["Arrivals", "Area(KM2)"]
      }
    },
    {
      "calculate": "datum['Arrivals'] / datum['Area(KM2)']",
      "as": "Arrivals_per_KM2"
    }
  ],
  "mark": { "type": "geoshape" },
  "encoding": {
    "color": {
      "field": "Arrivals_per_KM2",
      "type": "quantitative",
      "scale": { "type": "log", "scheme": "blues" },
      "title": "Arrivals per KM2"
    },
    "tooltip": [
      { "field": "properties.ADM1_EN", "type": "nominal", "title": "State" },
      { "field": "Arrivals", "type": "quantitative", "title": "Arrivals" },
      { "field": "Area(KM2)", "type": "quantitative", "title": "Area(KM2)" },
      {
        "field": "Arrivals_per_KM2",
        "type": "quantitative",
        "title": "Arrivals per KM2"
      }
    ]
  }
}
