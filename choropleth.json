{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Domestic Tourism Arrival 2023",
  "width": 800,
  "height": 600,
  "projection": { "type": "equalEarth" },
  "data": {
    "url": "https://raw.githubusercontent.com/jtan0284/3179/refs/heads/main/Data%20Source/DomesticTourismArrival.csv",
    "format": {
      "type": "topojson",
      "feature": "MalaysiaStatetopojson"
    }
  },
  "transform": [
    {
      "lookup": "properties.ADM1_EN",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jtan0284/3179/refs/heads/main/Data%20Source/DomesticTourismArrival.csv"
        }
      },
      "key": "State",
      "fields": ["Arrival"]
    }
  ],
  "mark": { "type": "geoshape" },
  "encoding": {
    "color": {
      "field": "Domestic Arrivals",
      "type": "quantitative",
      "scale": { "type": "log" }
    },
    "tooltip": [
      { "field": "properties.ADM1_EN", "type": "nominal", "title": "State" },
      { "field": "Arrival", "type": "quantitative" }
    ]
  }
}
