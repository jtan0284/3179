{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 750,
  "height": 400,
  "title": "Tourist Arrivals To Malaysia By Country From 2016 to 2023 (45 Countries)",
  "params": [
    {
      "name": "Year_selection",
      "value": 2016,
      "bind": {
        "input": "range",
        "min": 2016,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "zoom_level",
      "value": 138,
      "bind": {
        "input": "range",
        "min": 138,
        "max": 2500,
        "step": 10,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 0],
      "bind": {
        "input": "select",
        "options": [
          [0, 0],
          [102, 4],
          [102, 40],
          [-102, 50],
          [142, -30],
          [20, -30],
          [102, 40]
        ],
        "labels": [
          "Default",
          "Southeast Asia",
          "North Asia",
          "North America",
          "Oceania",
          "Africa",
          "Europe"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": {
      "expr": "center_to"
    },
    "scale": {
      "expr": "zoom_level"
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jtan0284/3179/refs/heads/main/Data%20Source/ne_50m_admin_0_countries.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available'",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jtan0284/3179/refs/heads/main/Data%20Source/TouristArrivalsByCountry.csv"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jtan0284/3179/refs/heads/main/Data%20Source/ne_50m_admin_0_countries.json",
              "format": {
                "type": "topojson",
                "feature": "ne_50m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "filter": "datum.Year == Year_selection"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "TouristArrival",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "scheme": "browns"
          },
          "title": "Tourist Arrivals"
        },
        "tooltip": [
          {
            "field": "Country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "TouristArrival",
            "type": "quantitative",
            "title": "Tourist Arrivals",
            "format": ","
          },
          {
            "field": "Year",
            "type": "quantitative",
            "title": "Year"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jtan0284/3179/refs/heads/main/Data%20Source/TouristArrivalsByCountry.csv"
      },
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": 200,
        "dy": 220,
        "fontSize": 15.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "value": "Zoom in to view Singapore at Map Centre Southeast Asia"
        },
        "color": { "value": "black" },
        "opacity": { "value": 1 }
      }
    }
  ],
  "config": {}
}
